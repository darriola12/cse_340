<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

<%- messages() %>
<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>


<div class="container-register">
    <div class="card">
      <div class="card_title">
        <h1>Create Account</h1>
        <span>Already have an account? <a href="account/login">Sign In</a></span>
      </div>
      <div class="form">
      <form action="/account/register" method="post">
        <input type="text" name="account_firstname" id="username" required placeholder=" First Name"  />
        <input type="text" name="account_lastname" id="username" placeholder="Last Name"  />
        <input type="email" name=" account_email"  required placeholder="Email" id="email" />
        <label for="accountPassword">Password:</label> 
        <span>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span> 
        <input type="password" name="account_password" id="accountPassword" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
        <button>Sign Up</button>
        </form>
      </div>
    </div>
  </div>

