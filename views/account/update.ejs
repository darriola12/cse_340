<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

<%- messages() %>
<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>


<div  class="container-form" id="form-updateInfo">
  <form action="/account/update" method="post" class="form-model">
  <h2 style="color: white;">Account Update Form</h2>
  <label for="input-line">First Name</label>
  <input type="text" required  name="account_firstname" id="input-line" value = "<%-  locals.accountData.account_firstname %>">
  <label for="input-line">Last Name</label>
  <input type="text" required name="account_lastname" id="input-line" value = "<%-  locals.accountData.account_lastname%>">
  <label for="input-line">Email</label>
  <input type="email" required name="account_email" id="input-line" value = "<%- locals.accountData.account_email %>">
  <label for="input-line"></label>
  <input type="hidden" name="account_id" id="input-line" value = "<%- locals.accountData.account_id%>">
  <div class="container-button-form "><button type="submit" class="button-longin"> Update</button> </div>
 </form>
</div>
<div  class="container-form">
  <form action="/account/updatepassword" method="post" class="form-model">
    <h2 style="color: white;">Update Password</h2>
    <span>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span>
    <label for="input-line">New password</label>
    <input type="password"  pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" name="account_password">
    <input type="hidden" name="account_id" id="input-line" value = "<%- locals.accountData.account_id%>">
    <div class="container-button-form "><button type="submit" class="button-longin"> Update</button> </div>
  </form>
</div>


